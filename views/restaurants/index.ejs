<% for(let restaurant of restaurants) { %>
<div class="card mb-3"  style="border-radius: 10px;
 background: linear-gradient(145deg, #e6e6e6, #ffffff);
">
  <div class="row" >
    <div class="col-md-4" >
      <% if (restaurant.images.length) { %>
      <img class="img-fluid" src="<%= restaurant.images[0].url%> " />
      <% }else{ %>
      <img
        class="img-fluid"
        src="https://res.cloudinary.com/ite183-project/image/upload/v1641052597/EatTapp/defaultzzz_z3afuz.png"
        alt=""
      />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h3 class="card-title"><%= restaurant.title %></h3>
        <p class="card-text"><%= restaurant.description %></p>    
        <p class="card-text">
          <small class="text-muted"> <%= restaurant.location %> </small>
        </p>
        
        <a
          class="btn btn-primary"
          style="background-color: var(--coral); border-color: var(--coral)"
          href="/restaurants/<%= restaurant._id  %> "
          >View</a
        >
      </div>
    </div>
  </div>
</div>

<% } %>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
  const restaurants = { features: <%- JSON.stringify(restaurants) %>};
</script>
